@{
    ViewData["Title"] = "AanMelden";
}
@model string

<h1>AanMelden</h1>

<h4>PersoneelGegevens</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form action="@Url.Action("AanmeldFunctie", "Aanmelden")" method="post">
            <div class="text-danger"></div>
            <div class="form-group">
                <label for="PersoneelID" class="control-label"></label>
                <input type="text" id="PersoneelID" class="form-control" />
            </div>
            <div class="form-group">
                <label for="Voornaam" class="control-label"></label>
                <input type="text" id="Voornaam" class="form-control" />
            </div>
            <div class="form-group">
                <label for="Achternaam" class="control-label"></label>
                <input type="text" id="Achternaam" class="form-control" />
            </div>
            <div class="form-group">
                <label for="Wachtwoord" class="control-label"></label>
                <input type="password" id="Wachtwoord" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            @Model
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
