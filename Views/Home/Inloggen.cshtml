@{
    ViewData["Title"] = "Home Page";
    ViewData["ReponseMessage"] = InternShipPipeline.Controllers.LoginController.responseMessage;
}

<html>
<body>

    <div class="text-center">
        <h1 class="display-4">Please login</h1>
        <br><br>

        <form action="@Url.Action("LoginFunctie", "Login")" method="post">
            <!--Text file?-->
            <label for="username">Username:</label>
            <input type="text" id="username" name="username" minlength="5" maxlength="50" title="Geen geldige username" required class="form-control">
            <br><br>


            <label for="password">Password:</label>
            <input type="password" id="password" name="password" minlength="8" maxlength="50" title="Geen geldig password" required class="form-control">
            <br><br>

            <input type="submit" id="submit" name="submit" value="Log in">
            <label for=response>@ViewData["ResponseMessage"]</label>
        </form>
    </div>

</body>
</html>
