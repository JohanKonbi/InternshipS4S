@{
    ViewData["Title"] = "Clock in or out";
    ViewData["Username"] = InternShipPipeline.Controllers.HomeController.username;
}

<html>
<head>
    <link rel="stylesheet" href="../wwwroot/css/site.css">
    <script>
        function myFunction() {
            var x = [document.getElementById("clockout"), document.getElementById("clockin")];
            for (var i = 0; i < x.length; i++) {
                if (x[i].style.display == "none") {
                    x[i].style.display = "block";
                } else {
                    x[i].style.display = "none";
                }
            }
        }
    </script>
    <style>
        /* Style the buttons */
        .btn {
            border: none;
            outline: none;
            padding: 10px 16px;
            background-color: lightgrey;
            cursor: pointer;
        }

        /* Style the active class (and buttons on mouse-over) */
        .active, .btn:hover {
            background-color: darkgrey;
            color: white;
        }
    </style>
</head>

<body>
    <div>
        <h1>Welcome, @ViewData["Username"]</h1>
        <br /><br />
        
        <button id="clockin" class="btn" onclick="myFunction()">Clock in</button>
        <button id="clockout" class="btn" onclick="myFunction()" style="display:none;">Clock out</button>
    </div>
</body>
</html>
